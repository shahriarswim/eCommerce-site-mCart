<%- include("partials/header.ejs") %>

<Section id="checkout">
  <div class="containder-fluid about-top">
    <h1>Checkout</h1>
  </div>
  <div class="text-center">
    <h4>Your Total: <%= total %> TK</h4>
  </div>

  <div class="container-fluid checkout-section">
    <form action="" method="post">
      <div class="form-group">
        <label for="number" class="font-weight-bold">Mobile Number:</label>
        <input
          class="form-control"
          type="tel"
          name="mobileNumber"
          id=""
          placeholder="+88"
          required
        />
      </div>
      <div class="form-group">
        <label for="name" class="font-weight-bold">Address:</label>
        <textarea
          class="form-control"
          name="address"
          id=""
          cols="5"
          rows="3"
          placeholder="Flat, House, Road, Block, City, Division."
          required
        ></textarea>
      </div>
      <div class="form-group">
        <label for="name" class="font-weight-bold">Measurements(optional):</label>
        <textarea
          class="form-control"
          name="measurement"
          id=""
          cols="5"
          rows="3"
          placeholder="If you want to order your product with fitting, then enter your measurements."
        ></textarea>
      </div>
      <div><h4 class="font-weight-bold">Choose payment option:</h4></div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="paymentMethod"
          id="inlineRadio1"
          value="Bkash"
        />
        <label class="form-check-label" for="inlineRadio1">Bkash</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="paymentMethod"
          id="inlineRadio2"
          value="Cash On Delivery"
        />
        <label class="form-check-label" for="inlineRadio2"
          >Cash On Delivery</label
        >
      </div>
      <div id="bkash-info">
        <div id="bkash-check">
          <h4 class="mt-3 mb-3 font-weight-bold">
            Merchant Number: +8801XXXXXXXXX
          </h4>

          <div class="form-group">
            <label for="" class="font-weight-bold">Bkash(Mobile Number):</label>
            <input
              class="form-control"
              type="tel"
              name="bkashNumber"
              id="bkashNumber"
              placeholder="+88"
            />
          </div>
          <div class="form-group">
            <label for="" class="font-weight-bold">TrxID:</label>
            <input
              class="form-control"
              type="text"
              name="bkashTrxID"
              id="bkashTrxID"
            />
          </div>
        </div>
      </div>
      <div class="text-right">
        <a href="/cart" class="btn btn-outline-danger">Back to Cart</a>
        <button type="submit" class="btn btn-success">Confirm purchase</button>
      </div>
    </form>
  </div>
</Section>

<%- include("partials/footer.ejs") %>
